# Facebook Page Access Token
# Lấy từ: https://developers.facebook.com/apps/
FB_PAGE_ACCESS_TOKEN=your_page_access_token_here

# Facebook Webhook Verify Token
# Tự đặt token bất kỳ (phải khớp khi setup webhook)
FB_VERIFY_TOKEN=your_custom_verify_token

# DeepSeek API Key
# Đăng ký tại: https://platform.deepseek.com/
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Optional: Service Ports
PORT=8080        # Python Service Port
APP_PORT=3000    # Main App (NestJS) Port

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Service Internal URLs (for Docker networking)
AI_SERVICE_URL=http://ai_service:8080
MAIN_APP_URL=http://app:3000
